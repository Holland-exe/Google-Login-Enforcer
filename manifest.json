{
  "manifest_version": 3,
  "name": "Google Login Enforcer",
  "description": "Always prompt Google login when accessing Gmail, Drive, etc. Session-only.",
  "version": "1.0",
  "permissions": [
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
